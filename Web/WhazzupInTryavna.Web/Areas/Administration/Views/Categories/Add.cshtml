@model WhazzupInTryavna.Web.ViewModels.Administration.Categories.CategoryAddViewModel;

@{
    ViewData["Title"] = "Add";
}

<partial name="_HeroNavMenu" />

<section class="col-6 offset-3">
    <h1 class="text-center">Add New Category</h1>

    <div id="card" class="card col-6 col-3 h-100 m-auto">
        <img id="card-image"
             src="https://i.vimeocdn.com/portrait/1274237_300x300.jpg"
             class="card-img-top img-fluid">

    </div>

    <form method="post" class="text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Image URL</label>
            <input asp-for="Image" type="text" class="form-control" id="image-input">
            <span asp-validation-for="Image" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</section>