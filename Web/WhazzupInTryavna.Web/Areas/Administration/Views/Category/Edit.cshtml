@model WhazzupInTryavna.Web.ViewModels.Administration.Category.CategoryEditViewModel;

@{
    ViewData["Title"] = "Edit";
}

<section>
    <h1>Edit</h1>

    <h4>Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div id="card" class="card col-6 col-lg-3 game-card h-100 m-auto">
                    <img id="card-image"
                         src="https://i.vimeocdn.com/portrait/1274237_300x300.jpg"
                         class="card-img-top img-fluid card-image">

                </div>

                <div class="form-group">
                    <label asp-for="Image">Image URL</label>
                    <input asp-for="Image" type="text" class="form-control" id="image-input">
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a class="btn badge-info" asp-action="All">Back to List</a>
    </div>
</section>