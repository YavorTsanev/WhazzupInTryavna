@model WhazzupInTryavna.Web.ViewModels.Activities.ActivitiesListViewModel

@{
    ViewData["Title"] = "Activities";
}

@if (TempData.ContainsKey("AddedActivity"))
{
    <div id="succsesAlert" class="alert alert-success">@this.TempData["AddedActivity"]</div>
}

<partial name="_HeroNavMenu" />
<div class="text-center">
    <h1>Activities</h1>
    <a asp-controller="Activities" asp-action="Add" class="btn btn-info">Add Activity</a>
</div>

<br />
<form method="get">
    <div class="row text-center container">
        <div class="form-group col-4">
            <label asp-for="Category" ></label>
            <select asp-for="Category" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
        <div class="form-group col-4">
            <label></label>
            <select></select>
        </div>
        <div class="form-group col-4">
            <label></label>
            <select></select>
        </div>
        
    </div>
    <div class="text-center">
        <button class="btn btn-primary text-center" asp-controller="Activities" asp-action="Index" asp-route-category="@Model.Category">Search</button>
    </div>
</form>
<div class="row text-center">
    @foreach (var activity in Model.Activities)
    {
        <section class="card-deck col-3 offset-1">
            <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id">
                <div class="card">
                    <img class="card-img-top" src="@activity.CategoryImage" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@activity.Name</h5>
                        <p class="card-text">@activity.Location</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Star Time: @activity.StartTime.ToString("dd - MMMM (dddd) HH:mm")</small>
                    </div>
                </div>
            </a>
        </section>
    }
</div>
@section Scripts
{
    <script>
        let el = document.getElementById("succsesAlert");
        setTimeout(function () { el.hidden = true }, 3000)
    </script>
}